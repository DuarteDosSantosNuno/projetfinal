@model BAND_APA_WEB_APP.Models.IndexViewModel

@{
    ViewData["Title"] = "Adopter un animal";
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm alert-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item btn-sm">
                            <a class="nav-link text-light btn btn-primary p-1 " asp-area="" asp-controller="Animal" asp-action="Create">Enregistrer un animal</a>
                        </li>
                        <li class="nav-item btn-sm">
                            <a class="nav-link text-light btn btn-primary p-1" asp-area="" asp-controller="Animal" asp-action="Index">Adopter un animal</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav d-flex justify-content-end">
                        <li class="nav-item btn-sm">
                            <a class="nav-link text-light btn btn-primary p-1" asp-area="" asp-controller="User" asp-action="Index">Autre Connexion</a>
                        </li>
                        <li class="nav-item btn-sm">
                            <a class="nav-link text-light btn btn-primary p-1 " asp-area="" asp-controller="Home" asp-action="Menu">Profil</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>
<div class="text-left my-4">
    <h1 class="display-4">Adopter un Animal</h1>
</div>

<div>
    <div class="p-1 bg-primary text-light">
        <div class="row-1 mt-auto p-2 d-flex justify-content-end">
            @{
                Html.RenderPartial("Filter");
            }
        </div>
    </div>
    <div class="animalsWindow">
        @if (Model.Animals.Count() >= 1)
        {
            foreach (var animal in Model.Animals)
            {
                <div id="animal" class="animalPanel container d-flex mb-2 mt-2 border border-secondary bg-primary bg-opacity-10 p-2 rounded"
             data-animal="@animal.Nom" data-date="@animal.DateEntree.ToString("dd/MM/yyyy")" data-age="@animal.Age">
                    <div class="col-xl-4 d-flex flex-column">
                        <div class="row-1 ">
                            <img class="rounded" src="~/Ressources/ImagesAnimals/@animal.Photo" runat="server" width="364" height="222" />
                        </div>
                    </div>
                    <div class="col-8 d-flex flex-column " style="font-family:Arial, Helvetica, sans-serif;">
                        <div class="row-1 p-2">
                            <h3>@animal.Nom</h3>
                        </div>
                        <div class="row-1 d-flex mx-2">
                            <h6>Espèce : </h6>
                            <p>@animal.Espece</p>
                        </div>
                        <div class="row-1 d-flex mx-2">
                            <h6>Race : </h6>
                            <p>@animal.Race</p>
                        </div>
                        <div class="row-1 mt-auto p-2">
                            @using (Html.BeginForm("AnimalDetail"))
                            {
                                <a class="btn btn-primary " asp-area="" asp-controller="Animal" asp-action="AnimalDetail" asp-route-id="@animal.AiID">Detail</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="my-5 container">
                <div class="row-xs-6 d-flex justify-content-center">
                    <h4 class="text-secondary">Aucun résultat trouvé</h4>
                </div>
                <div class="row-xs-6 d-flex justify-content-center">
                    <img src="https://emojis.slackmojis.com/emojis/images/1584456911/8112/david-goodenough.png?1584456911">
                </div>
            </div>
        }
    </div>
</div>