@model List<BAND_APA_WEB_APP.Models.Animal>

@{
    ViewData["Title"] = "Adopter un animal";

    var imagePath = "";
    var newFileName = "";

    newFileName = "Woofy.jpg";
    imagePath = @Url.Content($"~/Ressources/ImagesAnimals/{newFileName}");
}
<div class="text-center">
    <br />
    <h2 class="display-5">BAND APA</h2>
    <br/>
    <h3 class="display-5">Adopter un Animal</h3>
</div>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav d-flex justify-content-end">
                <li class="nav-item btn-sm">
                    <a class="nav-link text-light btn btn-primary p-1" asp-area="" asp-controller="Animal" asp-action="Index">Adoter un animal</a>
                </li>
            </ul>
            <ul class="navbar-nav d-flex justify-content-end">
                <li class="nav-item btn-sm">
                    <a class="nav-link text-light btn btn-primary p-1 " asp-area="" asp-controller="User" asp-action="Index">Profil</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div>
    <div class="p-1 bg-primary text-light" >
        <div class="row-1 mt-auto p-2 d-flex justify-content-end">
            <input type="button" class="btn btn-light mx-1" value="Trier"/>
            <input type="button" class="btn btn-light mx-1" value="Organiser"/>
        </div> 
    </div>

    @foreach (var animal in Model)
    {
        <div class="container d-flex mb-2 mt-2 border border-secondary bg-lightblue p-2">
            <div class="col-xl-4 d-flex flex-column">
                <div class="row-1">
                    <img src="~/Ressources/ImagesAnimals/@animal.Photo" runat="server" width="364" height="222"/>
                </div>                       
            </div>        
            <div class="col-8 d-flex flex-column ">
                <div class="row-1 p-2">
                    <h3>@animal.Nom</h3>
                </div>
                <div class="row-1 d-flex mx-2">
                    <h6>Espèce : </h6>
                    <p>@animal.Espece</p>
                </div> 
                <div class="row-1 d-flex mx-2">
                    <h6>Race : </h6>
                    <p>@animal.Race</p>
                </div> 
                <div class="row-1 mt-auto p-2">
                    @using(Html.BeginForm("AnimalDetail"))
                    {
                        <a class="btn btn-primary " asp-area="" asp-controller="Animal" asp-action="AnimalDetail" asp-route-id="@animal.AiID">Detail</a>
                    }
                </div> 
            </div>       
        </div>
    }
    
    
</div>